<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.laibomusic"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />

    <application
        android:name="com.example.laibomusic.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.example.laibomusic.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AnimFade2" >
        </activity>
        <activity
            android:name="com.example.laibomusic.MusicPlaying"
            android:label="@string/app_play"
            android:theme="@style/AnimFade2" >
        </activity>
        <activity
            android:name="com.example.laibomusic.MusicLibrary"
            android:label="@string/app_main"
            android:theme="@style/AnimFade2" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.laibomusic.TracksBrowser"
            android:label="@string/app_broswer"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <!-- Serach -->
        <activity
            android:name="com.example.laibomusic.QueryBrowserActivity"
            android:exported="true"
            android:label="@string/app_search"
            android:theme="@style/AnimFade2" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <meta-data
            android:name="android.app.default_searchable"
            android:value="com.example.laibomusic.QueryBrowserActivity" />

        <service android:name="com.example.laibomusic.service.MusicService" />
    </application>

</manifest>