<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/title_bar" 
    android:background="@color/skyblue" 
    android:layout_width="wrap_content"
    android:layout_height="50dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
 
          
        <ImageView  
           android:layout_alignParentLeft="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/title_up_img"
           android:src="@drawable/icon_up_left_selector"
           android:padding="10dip"
           android:clickable="true"
           android:visibility="invisible"
           />
        <TextView android:id="@+id/title_middle_text"  
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        
          
          <ImageView 
            android:id="@+id/ib_search"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:src="@drawable/search"
            android:layout_marginRight="10dip"
            android:visibility="invisible"
            ></ImageView>
        
   
 </RelativeLayout><!-- From: file:/F:/workforas/laiboMusic/res/layout/title.xml -->